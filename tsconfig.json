{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
